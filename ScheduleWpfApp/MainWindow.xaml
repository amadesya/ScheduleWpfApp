<Window x:Class="ScheduleWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Выберите дату расписания фильмов"/>
        <ComboBox x:Name="DateComboBox" SelectedItem="{Binding DateTime}"/>
        <DatePicker />
        <Label Content="Выберите кинотеатр"/>
        <ComboBox x:Name="CinemaComboBox" SelectedItem="{Binding Cinema}"/>
        <Button x:Name="infoButton" Content="Показать расписание в Excel" Margin="20" Click="infoButton_Click" />
    </StackPanel>
</Window>
